<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".patient.patientInfo.PatientInfoController"
             android:background="#ecf0f1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        app:title="@string/personalInformations"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="32dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/advice"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/bloodTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:ems="10"/>


            <TextView
                android:id="@+id/skinColorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:ems="10"
                android:text="@string/skinColorTextView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <SeekBar
                    android:id="@+id/colorSkinSeekBar"
                    android:layout_width="271dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:ems="10"
                    android:layout_weight="0.11"/>

                <Button
                    android:id="@+id/colorSkinEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </Button>
            </LinearLayout>

            <EditText
                android:id="@+id/fatherNameEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="@string/fatherNameEditText"
                android:inputType="textPersonName"/>


            <EditText
                android:id="@+id/motherNameEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="@string/motherNameEditText"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/weigthEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="@string/weigthEditText"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/heigthEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="@string/heigthEditText"
                android:inputType="number"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">


                <Button
                    android:id="@+id/confirmButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirm">
                </Button>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</FrameLayout>
