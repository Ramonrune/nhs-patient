<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:app="http://schemas.android.com/tools"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardElevation="8dp"
                                    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/hospitalImageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="left"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hospital"
                app:cardCornerRadius="100dp"/>

            <TextView
                android:id="@+id/hospitalNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:paddingTop="8dp"
                android:scaleType="centerCrop"
                android:text="Hospital"
                android:textSize="16dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/doctorImageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="left"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hospital"
                app:cardCornerRadius="100dp"
                card_view:srcCompat="@drawable/doctor"/>

            <TextView
                android:id="@+id/doctorNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:paddingTop="8dp"
                android:text="Doctor"
                android:textSize="16dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/institutionNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                android:text="@string/examsData"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bdc3c7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Description"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bdc3c7" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Date"/>

                <Button
                    android:id="@+id/attachmentButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/seeAttachment"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>





    </LinearLayout>




</android.support.v7.widget.CardView>